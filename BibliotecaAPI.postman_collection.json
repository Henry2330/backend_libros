				{
					"name": "Listar todos los libros",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Respuesta 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"La respuesta es un array\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.be.an(\"array\");",
									"});",
									"",
									"pm.test(\"Cada libro tiene las propiedades correctas\", function () {",
									"    var jsonData = pm.response.json();",
									"    jsonData.forEach(function(libro) {",
									"        pm.expect(libro).to.have.property(\"id\");",
									"        pm.expect(libro).to.have.property(\"titulo\");",
									"        pm.expect(libro).to.have.property(\"autor\");",
									"        pm.expect(libro).to.have.property(\"categoria\");",
									"    });",
									"});",
									"",
									"pm.test(\"Tipos de datos de cada propiedad\", function () {",
									"    var jsonData = pm.response.json();",
									"    jsonData.forEach(function(libro) {",
									"        pm.expect(libro.id).to.be.a(\"number\");",
									"        pm.expect(libro.titulo).to.be.a(\"string\");",
									"        pm.expect(libro.autor).to.be.a(\"string\");",
									"        pm.expect(libro.categoria).to.be.a(\"string\");",
									"    });",
									"});",
									"",
									"// Test opcional: asegurar que hay al menos 1 libro en la lista",
									"pm.test(\"La lista no está vacía\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.length).to.be.above(0);",
									"});",
									"",
									""
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
